public class TeleOpBNO055Usage extends OpMode {
    private BNO055 robotImu;


    public void init() {
        this.robotImu = new BNO055(this.hardwareMap.i2cDevice.get("bno"));
        this.robotImu.eulerRequest.startReading();
    }
    public void start() {
        this.robotImu.resetHeading();
    }
    public void loop() {
        if (this.robotImu.eulerRequest.hasReadData()) {
            final BNO055.EulerAngle heading = this.robotImu.getHeading();
            final double roll = Math.abs(heading.roll); //because we are using a rotated sensor
        }
    }
    public void stop() {
        this.robotImu.eulerRequest.stopReading();
    }
}
